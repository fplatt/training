#node.js

apt-get install g++ libssl-dev curl
curl http://nodejs.org/dist/v0.5.10/node-v0.5.10.tar.gz
tar -xzf node-v0.5.10.tar.gz
cd node-v0.5.10
./configure
make
make install




#mongodb

apt-get install mongodb




#npm

curl http://npmjs.org/install.sh | sh



#node_modules

npm install -g express
npm install -g jade
npm install -g stylus
npm install -g coffee-script
npm install -g mongodb



#npm install dir und node moduledir verlinken

cp -r /usr/local/lib/node/* /usr/local/lib/node_modules
rm -r /usr/local/lib/node
ln -s /usr/local/lib/node_modules /usr/local/lib/node